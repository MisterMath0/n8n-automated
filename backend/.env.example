# Application Settings
APP_NAME="N8N AI Workflow Generator"
APP_VERSION="2.0.0"
ENVIRONMENT="production"
DEBUG=false

# API Configuration
API_HOST="0.0.0.0"
API_PORT=8000
API_RELOAD=false

# AI Provider API Keys (at least one required)
# Google AI (Gemini) - FREE tier with 1M+ context window (recommended)
GOOGLE_API_KEY="your_google_ai_api_key_here"

# Anthropic Claude - High quality responses
ANTHROPIC_API_KEY="your_anthropic_api_key_here"

# OpenAI - Reliable performance
OPENAI_API_KEY="your_openai_api_key_here"

# Groq - Fast inference
GROQ_API_KEY="your_groq_api_key_here"

# CORS Settings - CRITICAL: Only allow your domain
CORS_ORIGINS="https://autokraft.app"

# Security - CRITICAL: Generate a secure secret key
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY="CHANGE_THIS_IMMEDIATELY_IN_PRODUCTION"

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# Rate Limiting - Adjusted for security
RATE_LIMIT_REQUESTS_PER_MINUTE=30
RATE_LIMIT_BURST=5

# Supabase Configuration - CRITICAL: Use environment-specific values
SUPABASE_URL="your_supabase_project_url"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"
SUPABASE_JWT_SECRET="your_supabase_jwt_secret"

# Documentation Scraping
APIFY_API_TOKEN="your_apify_token_here"

# Security Headers (for reference - these are set in nginx)
# Content-Security-Policy: Prevents XSS attacks
# Strict-Transport-Security: Enforces HTTPS
# X-Frame-Options: Prevents clickjacking
# X-Content-Type-Options: Prevents MIME sniffing
# Permissions-Policy: Restricts browser features
